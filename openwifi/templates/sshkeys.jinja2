{% extends main_template %}

{% block content %}

<h1> SSH Keys Overview </h1>

  <table class="table">
  {% for item in items -%}
    {% if loop.first %}
      <thead>
        <tr>
          {%- for field in table_fields %}
            <th>{{ field }}</th>
          {%- endfor %}
        </tr>
      </thead>
      <tbody>
    {%- endif -%}
        <tr>
        {%- set rowloop = loop %}
        {%- for field in table_fields -%}
		  <td>
		{%- if field == 'actions' -%}
			<a class="btn btn-primary" href="sshkeys_assign/{{ item['id'] }}">Assign Nodes</a>
			{%- for action in actions -%}
				<a class="btn btn-primary" href="sshkeys/{{ item['id'] }}/{{ action }}">{{ action }}</a>
			{%- endfor -%}
		{%- elif field == 'openwrt' -%}
			{%- for openwrt in openwrts[item['id']] -%}
		      	<a href='/openwrt/{{ openwrt['uuid'] }}'>{{ openwrt['name'] }} / {{ openwrt['uuid'] }}</a> <br>
		      {%- endfor -%}
		{%- else -%}
			  {{ item[field] }}
		{%- endif -%}
		  </td>
        {%- endfor %}
        </tr>
    {%- if loop.last -%}
      </tbody>
    {%- endif -%}
  {%- else -%}
  <p class="lead">no data</p>
  {%- endfor %}
  </table>
  <a class="btn btn-primary" href="/sshkeys_add">Add</a>
{% endblock %}
